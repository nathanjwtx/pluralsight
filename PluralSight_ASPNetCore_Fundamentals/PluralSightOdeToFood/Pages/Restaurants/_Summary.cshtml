@model OdeToFood.Core.Restaurant

<div class="card">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card-footer">
        <a class="btn btn-sm btn-info" asp-page="./Detail" asp-route-restaurantId="@Model.Id">
            Zoom
        </a>
        <a class="btn btn-sm btn-secondary" asp-page="./Edit" asp-route-restaurantId="@Model.Id">
            Edit
        </a>
        <a class="btn btn-sm btn-danger" asp-page="./Delete" asp-route-restaurantId="@Model.Id">
            Delete
        </a>
    </div>
</div>