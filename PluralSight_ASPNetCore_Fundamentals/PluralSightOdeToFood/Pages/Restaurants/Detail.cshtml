@* set the url route to Restaurants/Detail/ and then a variable called restuarantId *@
@page "{restaurantId:int}"
@model PluralSightOdeToFood.Pages.Restaurants.Detail

@{
    ViewData["Title"] = "Detail";
}

<!DOCTYPE html>

<html>
<head>
    <title>Restaurant Detail</title>
</head>
<body>
@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}
<div>
    <h2>@Model.Restaurant.Name</h2>
</div>
<div>
    Id: @Model.Restaurant.Id
</div>
<div>
    Location: @Model.Restaurant.Location
</div>
<div>
    Cuisine: @Model.Restaurant.Cuisine
</div>

<a asp-page="./List" class="btn btn-outline-info">All Restaurants</a>
</body>
</html>